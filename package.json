{
  "name": "grind",
  "version": "1.0.0",
  "description": "Rules-first simulation engine",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "bash scripts/install-hooks.sh",
    "build": "tsc",
    "demo": "npm run build && node dist/demo.js",
    "repl": "npm run build && node dist/repl.js",
    "agent": "npm run build && node dist/agent/index.js",
    "policy": "npx tsx src/policy-runner/cli.ts",
    "web": "npm run build && node dist/web/server/index.js",
    "web:dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/web/server/index.ts",
    "dev:client": "echo 'Client dev server requires Phase 3 (Vite/Preact setup)'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "check": "npm run format:check && npm run lint && npm run build && npm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.1"
  }
}
